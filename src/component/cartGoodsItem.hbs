
    <div class="card mb-3 p-2">
        <div class="row align-items-center">
            <div class="col-md-2">
                <img src="{{image}}" class="img-fluid rounded-start" alt="Product photo">
            </div>
            <div class="col-md-4">                
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{description}}</p>                               
            </div>
            <div class="col-md-2">
                {{#with price}}
                    <div>{{title}}:</div>
                    <div><h3>{{value}}</h3></div>
                {{/with}}
            </div>
            <div class="col-md-2">
                {{amount}}
            </div>
            <div class="col-md-2">
                {{#each buttons}}
                    <div class="pt-2">
                        <a class="btn {{#if isPrimary}}btn-primary{{/if}} 
                        {{#if isDanger}}btn-outline-danger{{/if}}">
                        {{text}}</a>
                    </div>
                {{/each}}
            </div>
        </div>   
    </div>

