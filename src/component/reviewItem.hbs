<div class="card p-3 mb-5">
    <div class="card">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                {{#with title}}
                    <div><b>{{userName}}</b></div>
                    <div class="mb-2">{{caption}}</div>
                    {{date}}                      
                {{/with}}
            </li>
            <li class="list-group-item">
                {{#with reviewBody}}
                    {{#with seller}}
                        {{title}}:
                        {{value}}
                    {{/with}}
                    {{#with rating}}
                        <div class="mt-4 mb-4">
                            {{title}}:
                            {{value}}
                        </div>
                    {{/with}}
                    {{#each text}}
                        <div class="mb-4">
                            {{this}}
                        </div>
                    {{/each}}
                    {{#with advantages}}
                        <div class="mb-3">
                            <b>{{title}}:</b>
                            <div>{{text}}</div>
                        </div>
                    {{/with}}
                    {{#with disadvantages}}
                        <div class="mb-3">
                            <b>{{title}}:</b>
                            <div>{{text}}</div>
                        </div>
                    {{/with}}
                    <div class="mt-3 mb-2">
                        {{#each images}}                       
                            <img src="{{this}}" alt="Product photo" class="rounded me-2">
                        {{/each}}
                    </div>
                {{/with}}
            </li>
        </ul>
    </div>
    {{#each reviewBody.coments}}
        <div class="card ms-5 mt-4 p-2">
            <b class="mb-2">{{userName}}</b>
            <div class="mb-2">{{date}}</div>
            {{text}}
        </div>
    {{/each}}
</div>
