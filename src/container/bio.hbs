{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            <h1>{{name}}</h1>
            <b>Birth.</b> {{birthdate}},
            <br>
            {{birthplace}}
            <br>
            <br>
            <b>Death.</b> {{deathdate}},
            <br>
            {{deathplace}}
            <br>
            <br>
            <b>Nationality:</b> {{nationality}}
            <br>
            <br>
            <b>Occupation:</b> {{occupation}}
        </section>
        <hr>
        <section>
            <h2>Known for:</h2> 
            <ul>
                {{#each known_for}}
                <li>
                    {{this}}
                </li>    
                {{/each}}
            </ul>    
        </section>
        <hr>
        <section>
            <h3>Education:</h3>
            <ul>
                {{#each education}}
                    <li>
                        {{institution}}, ({{year}})
                        <br>
                        {{field}},
                        {{degree}}
                    </li>
                {{/each}}
            </ul>
        </section>
        <hr>
        <section>
            <h4>Notable publications:</h4>
            <ul>
                {{#each notable_publications}}
                    <li>
                        <em>{{title}}</em>
                        <br>
                        {{publisher}} ({{year}})
                        <br>
                        <br>
                    </li>
                {{/each}}    
            </ul>
        </section>
        <hr>
        <section>
            <h4>Partners:</h4>
            <ul>
                {{#each partners}}
                    <li>
                        <em>{{name}}</em>
                        <br>
                        {{relationship}} ({{years}})
                        <br>
                        <br>
                    </li>
                {{/each}}    
            </ul>
        </section>
        <hr>
        <section>
            <h4>Awards:</h4>
            <ul>
                {{#each awards}}
                    <li>
                        <em>{{title}}</em>
                        ({{year}})
                        <br>
                        "{{description}}" 
                        <br>
                    </li>
                {{/each}}
            </ul>           
        </section>
        <hr>
         <section>
            <h4>Influences:</h4>
            <ul>
                {{#each influences}}
                    <li>
                        {{this}}
                    </li>
                {{/each}}
            </ul>           
        </section>
         <section>
            <h4>Influenced:</h4>
            <ul>
                {{#each influenced}}
                    <li>
                        {{this}}
                    </li>
                {{/each}}
            </ul>           
        </section>
        <hr>
         <section>
            <h4>Quotes:</h4>
            <ul>
                {{#each quotes}}
                    <li>
                        <em>"{{this}}"</em>
                    </li>
                {{/each}}
            </ul>           
        </section>
        <hr>
        <section>
            <h4>Major discoveries:</h4>
            <ul>
                {{#each major_discoveries}}
                    <li>
                        <em>"{{title}}"</em> ({{year}})
                        <br>
                        <b>Description:</b> {{description}}
                    </li>
                {{/each}}
            </ul>           
        </section>
        <hr>
        <section>
            <h4>Contributions:</h4>
            
                {{#with contributions}}                   
                    <b>Field:</b> {{field}}
                    <br>
                    <em>"{{title}}"</em> ({{year}})
                    <br>
                    <br>
                    <b>Description:</b> {{description}}                   
                {{/with}}                       
        </section>
    </main>
</div>



