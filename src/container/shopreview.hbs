<main class="p-3">   
    {{#with navigation}}
        <div class="card mb-5"> 
            <div class="nav nav-tabs">                                                          
                {{#each links}}                            
                    <div class="nav-item">
                        <a href="{{href}}" class="nav-link">{{text}}</a>
                    </div>
                {{/each}}   
                <div class="nav-item">
                    <a href="#" class="nav-link disabled">Disabled</a>
                </div>                 
            </div>
        </div> 
    {{/with}}
    <div class="mt-5"></div>
    <div class="row"> 
        {{#with formBlock}}
            <div class="col-8">
                <h1 class="mb-4">{{header}}</h1>
                {{#with rating}}
                    <p>{{title}} {{value}}</p>
                {{/with}}
                {{#with actionBlock}}
                    <div class="nav nav-tabs">
                        {{#each tabs}}
                        <div class="nav-item me-4">
                            {{#if isActive}}
                                <a class="pe-5 ps-5 nav-link active"><b>{{text}}</b></a>                            
                            {{else}}
                                <a class="pe-5 ps-5 nav-link">{{text}}</a>
                            {{/if}}            
                        </div>
                        {{/each}}
                    </div>
                    <div class="mt-5">
                        <hr>
                    </div>
                    <div class="card p-3 mt-5">
                        {{#with report}}
                            {{title}}
                             {{#with button}}
                                <div>
                                    <a class="btn btn-secondary mt-3" href="{{link}}">{{text}}</a>
                                </div>
                            {{/with}}
                        {{/with}}
                    </div>
                {{/with}}
                <div class="mt-5">
                    <hr>
                </div> 
                
                {{#with feedbackBlock}}
                    <h2>{{title}}</h2>
                    {{#each buttons}}                            
                            <a class="btn {{#if isWarning}}btn-warning{{/if}}
                            {{#if isSuccess}}btn-success{{/if}} 
                            {{#if isDanger}}btn-danger{{/if}} mt-3 me-2" href="{{link}}">
                            {{text}}</a>                           
                    {{/each}}
                {{/with}}
                
            </div>    
            {{#with goodsInfo}}
                <div class="col-4">
                    <div class="card p-3 mb-3">
                        <div class="mb-2">                            
                            <img src="{{photo}}" alt="Product photo" class="rounded">
                        </div>
                        <b>{{name}}</b>                                
                    </div>
                
                    <div class="card p-3 mb-3">
                        <div class="mb-2">
                            {{price}}
                        </div>
                        {{#if inMarket}} 
                            <div>Є в наявності</div>
                        {{/if}}
                        {{#each buttons}}
                            <div>
                                <a class="btn {{#if isPrimary}}btn-primary{{/if}}
                                {{#if isSecondary}}btn-secondary{{/if}} mt-2 me-2" href="{{link}}">
                                {{text}}</a>
                            </div>
                        {{/each}}
                    </div>
                    <div class="card p-3">
                        {{#with seller}}
                        <div>
                            {{title}}:
                            <b>{{value}}</b>
                        </div>
                        {{/with}}
                    </div>
                </div>
            {{/with}}
        {{/with}}
        <div class="col-12">
            <div class="mt-5 mb-5">
                <hr>
            </div>
            {{#each reviewList}}
                {{> reviewItem}}
            {{/each}}
            <div class="card text-bg-success text-center p-3">
                {{#with service}}
                    <h2 class="mb-3">{{title}}</h2>
                    <p class="mb-2">{{description}}</p>
                    <div>
                        {{#each buttons}}                            
                            <a class="btn btn-primary mt-2 me-2" href="{{link}}">
                            {{text}}</a>                           
                        {{/each}}
                    </div>
                {{/with}}
            </div>
        </div>    
        <div class="mt-5">
            <hr>
        </div>
        <div class="row">
            {{#each footer}}            
                <div class="col-2"> 
                    <div>
                        {{#with this.[0]}}        
                            <a class="nav nav-link" href="{{link}}">{{text}}</a> 
                        {{/with}}
                    </div>
                    
                    <div>
                        {{#with this.[1]}}        
                            <a class="nav nav-link" href="{{link}}">{{text}}</a> 
                        {{/with}}
                    </div>
                    
                    <div>
                        {{#with this.[2]}}        
                            <a class="nav nav-link" href="{{link}}">{{text}}</a> 
                        {{/with}}
                    </div>
                    
                    <div>
                    {{#with this.[3]}}        
                        <a class="nav nav-link disabled" href="{{link}}">{{text}}</a> 
                    {{/with}}
                    </div>
                </div>                                       
            {{/each}}
        </div>
    </div>
</main>    
