<main class="p-3">   
    {{#with navigation}}
        <div class="card mb-5"> 
            <div class="nav nav-tabs">                                                          
                {{#each links}}                            
                    <div class="nav-item">
                        <a href="{{href}}" class="nav-link">{{text}}</a>
                    </div>
                {{/each}}   
                <div class="nav-item">
                    <a href="#" class="nav-link disabled">Disabled</a>
                </div>                 
            </div>
        </div> 
    {{/with}}
    <div class="mt-5 mb-5">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{breadcrumb.[0].url}}">{{breadcrumb.[0].name}}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{breadcrumb.[1].url}}">{{breadcrumb.[1].name}}</a>
            </li>
            <li class="breadcrumb-item">
                {{breadcrumb.[2].name}}
            </li>
        </ol>
    </div>
    <div class="mt-5 mb-4">
        <h1>{{header}}</h1>
    </div>
    <div class="row mb-5 gx-2">
        {{#each sortBlock}}
            <div class="col-3 mb-5">
                <select class="form-select form-select-lg">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
        {{/each}}
        <div class="col-4">
            {{#with filterBlock}}
                <div class="card p-2 ps-3 pe-3">
                    {{#with sellers}}                   
                        <div class="mb-3">
                            {{title}}
                        </div>
                        {{#each list}}
                        <div class="form-check mb-2">
                            <label class="form-check-label">{{value}}</label>
                            <input name="{{value}}" type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    {{/with}}
                    <div class="mb-1">
                        <hr>
                    </div>
                    {{#with brands}}
                        <div class="mb-3">
                            {{title}}
                        </div>
                        {{#with input}}
                            <input class="form-control mb-3" value="{{placeholder}}">
                        {{/with}}
                        {{#each options}}
                            <div class="form-check mb-2">
                                <label class="form-check-label">{{value}}</label>
                                <input name="{{value}}" type="checkbox" class="form-check-input">
                            </div>
                        {{/each}}                                        
                    {{/with}}
                    <div class="mb-1">
                        <hr>
                    </div>
                    {{#with price}}
                        <div class="mb-3">
                            {{title}}
                        </div>
                        {{#with range}}
                            <input class="form-control mb-3" value="{{from}}">
                            <input class="form-control mb-3" value="{{to}}">
                        {{/with}}
                        {{#with button}}
                            <div>
                                <a class="btn btn-outline-secondary btn-lg mb-3" href="{{link}}">{{text}}</a>
                            </div>
                        {{/with}}
                    {{/with}}
                    {{#each filterList}}
                        <div class="mb-1">
                            <hr>
                        </div>
                        <div class="mb-2">
                            {{title}}
                        </div>
                        {{#each options}}
                            <div class="form-check mb-2">
                                <label class="form-check-label">{{value}}</label>
                                <input name="{{value}}" type="checkbox" class="form-check-input">
                            </div>
                        {{/each}}                        
                    {{/each}}
                </div>
            {{/with}}
        </div>
        <div class="col-8">
            <div class="row gx-2 gy-4">
                {{#each goodsList}}
                    {{> catalogItem}}
                {{/each}}
            </div>
        </div>       
    </div>
    <div class="card text-bg-success text-center p-3">
        {{#with service}}
            <h2 class="mb-3">{{title}}</h2>
            <p class="mb-2">{{description}}</p>
            <div>
                {{#each buttons}}                            
                    <a class="btn btn-primary mt-2 me-2" href="{{link}}">
                    {{text}}</a>                           
                {{/each}}
            </div>
        {{/with}}
    </div>   
    <div class="mt-5">
        <hr>
    </div>
    <div class="row">
        {{#each footer}}            
            <div class="col-2"> 
                <div>
                    {{#with this.[0]}}        
                        <a class="nav nav-link" href="{{link}}">{{text}}</a> 
                    {{/with}}
                </div>
                
                <div>
                    {{#with this.[1]}}        
                        <a class="nav nav-link" href="{{link}}">{{text}}</a> 
                    {{/with}}
                </div>
                
                <div>
                    {{#with this.[2]}}        
                        <a class="nav nav-link" href="{{link}}">{{text}}</a> 
                    {{/with}}
                </div>
                
                <div>
                {{#with this.[3]}}        
                    <a class="nav nav-link disabled" href="{{link}}">{{text}}</a> 
                {{/with}}
                </div>
            </div>                                       
        {{/each}}
    </div>
</main>    
