{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    {{#with page_header}}
        <div class="text-center">
            <h1>{{title}}</h1>
            <p class="text-uppercase">{{description}}</p>
        </div>
    {{/with}}
    {{#with section}}
        <div class="card mb-3">
            <div class="card-body">
                {{#with about_us}}
                    {{#with title_list}}                
                        <div class="text-end">
                            <div class="display-6">{{main}}</div>
                            <h2>{{sub}}</h2>
                        </div>                                         
                    {{/with}}
                     <button class="btn btn-outline-info"> 
                            {{button.text}} 
                        </button> 
                {{/with}}
            </div>
        </div>
        
        {{#with advantage}}
            <div class="card mb-3">
                <div class="card-body">
                    <div class="display-5">{{title}}</div>
                    
                    <div class="card mb-3">
                        <div class="card-body">
                            {{#with efficiency}}
                                <div class="display-4"> {{title}} </div>
                                
                                <h6>{{sub_title}}</h6>
                                
                                <p>{{description}}</p>
                                
                                <button class="btn btn-outline-warning">
                                    {{button}}
                                </button>
                            {{/with}}
                        </div>
                    </div>
                    
                    <div class="card mb-3">
                        <div class="card-body">
                            {{#with innovation}}
                                <div class="text-center">                            
                                    <div class="display-4"> {{title}} </div>
                                    
                                    <h6>{{sub_title}}</h6>
                                    
                                    <p>{{description}}</p>
                                                                                                     
                                </div>
                                <button class="btn btn-outline-warning">
                                    {{button}}
                                </button> 
                            {{/with}}
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-body">
                            {{#with collaboration}}
                                <div class="text-end">                            
                                    <div class="display-4"> {{title}} </div>
                                    
                                    <h6>{{sub_title}}</h6>
                                   
                                    <p>{{description}}</p>
                                                                                                      
                                </div>
                                <button class="btn btn-outline-warning">
                                    {{button}}
                                </button> 
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
        {{/with}}
        
        {{#with agreement}}
            <div class="card">
                <div class="card-body">
                    <div class="display-5">{{title}}</div>
                    
                    <div class="card">
                        <div class="card-body">
                            {{#with info}}
                                <h5>{{sub_title}}</h5>                            
                                <div class="card">
                                    <div class="card-body">
                                        {{#with detail}}
                                            <p>{{text}}</p>
                                             
                                            <button class="btn btn-success">
                                                {{button}}
                                            </button>
                                        {{/with}}
                                    </div>
                                </div>
                            {{/with}}                           
                        </div>
                    </div>
                </div>
            </div>
        {{/with}}
    {{/with}}
</main>




